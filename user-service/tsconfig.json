{
  "compilerOptions": {
    "target": "ES2020",
    "experimentalDecorators": true,
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
, "src/controllers/userController.js"  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}